{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "preserve",
    "module": "esnext",
    "outDir": "./src/out",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules",
    "src/out"
  ],
  "include": [
    "src/typescript"
  ]
}
